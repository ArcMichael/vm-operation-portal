{
  "name": "vm-operation-portal",
  "version": "0.1.1-rc.3",
  "private": false,
  "description": "",
  "homepage": "https://github.com/ArcMichael/vm-operation-portal#readme",
  "bugs": {
    "url": "https://github.com/ArcMichael/vm-operation-portal/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArcMichael/vm-operation-portal.git"
  },
  "scripts": {
    "add": "git add .",
    "commit": "git-cz",
    "commitlint": "commitlint --config commitlint.config.js -e -V",
    "push": "git push",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "dev": "next dev",
    "build": "next build",
    "prepare": "npx husky install",
    "lint-staged": "lint-staged",
    "release": "standard-version -- --release-as patch && git push --follow-tags origin main && npm publish --registry=http://nexus.dependency.in.mly0110.org.cn:8081/repository/hosted-npm/",
    "release:alpha": "standard-version --prerelease alpha",
    "release:rc": "standard-version --prerelease rc",
    "start": "next start",
    "lint": "next lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,jsx}": [
      "npm run lint",
      "npm run format"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  },
  "dependencies": {
    "@types/node": "18.15.11",
    "@types/react": "18.0.31",
    "@types/react-dom": "18.0.11",
    "eslint": "8.37.0",
    "eslint-config-next": "13.2.4",
    "next": "13.2.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "5.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^2.2.2",
    "lint-staged": "^13.2.0",
    "standard-version": "^9.5.0"
  }
}
